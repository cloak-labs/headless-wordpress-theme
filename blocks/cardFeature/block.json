{
    "name": "acf/cardfeature",
    "title": "Cards Feature",
    "description": "A custom block for displaying pages/posts/manual data as cards.",
    "category": "widgets",
    "icon": "admin-page",
    "keywords": ["cards", "posts", "pages", "tiles"],
    "acf": {
        "mode": "edit",
        "renderTemplate": "block.php"
    },
    "align": false,
    "supports": {
        "mode": false,
        "align": false,
        "spacing": {
            "margin": ["top", "bottom"]
        },
        "color": {
            "background": true,
            "gradients": false,
            "text": false
        }
    },
    "attributes": {
        "backgroundColor": {
            "type": "string",
            "default": "blue-300"
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "top": "80px",
                        "bottom": "80px"
                    }
                }
            }
        }
    }
}